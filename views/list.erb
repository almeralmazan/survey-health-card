<div id="list-view">

  <h3>Records Summary</h3>

  <div>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th></th>
          <th>Male</th>
          <th>Female</th>
          <th>Permanent</th>
          <th>Contractual</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Employees</td>
          <td><%= count_emp_by 'gender', 'M' %></td>
          <td><%= count_emp_by 'gender', 'F' %></td>
          <td><%= count_emp_by 'nature', 'Permanent' %></td>
          <td><%= count_emp_by 'nature', 'Contractual' %></td>
          <td><%= Person.count %></td>
        </tr>
      </tbody>
    </table>
  </div><!-- end .well -->

</div><!-- end list-view -->
